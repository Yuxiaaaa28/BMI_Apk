class bmidatascreen extends StatefulWidget {
  @override
  State<bmidatascreen> createState() => _bmidatascreenState();
}

class _bmidatascreenState extends State<bmidatascreen> {
  int Height = 100;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Calculate BMI"), //appbar,
        //backgroundColor: Colors.green,
      ),
      body: Column(children: [
        Expanded(
          child: Row(
            children: const [
              Expanded(
                  child: BmiCard(
                      child: Gendericontext(
                icon: Icons.male,
                Title: 'Male',
              ))),
              Expanded(
                child: BmiCard(
                  child: Gendericontext(icon: Icons.female, Title: 'Female'),
                ),
              ),
            ],
          ),
        ),
        Expanded(
          child: Container(
            child: BmiCard(
              child: Column(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  Text("Height",
                      style: labelTextStyle.copyWith(
                          fontSize: 20, fontWeight: FontWeight.bold)),
                  SizedBox(height: 12),
                  Row(
                    mainAxisAlignment: MainAxisAlignment.center,
                    crossAxisAlignment: CrossAxisAlignment.end,
                    children: [
                      Text(
                        "$Height",
                        style: numberStyle,
                      ),
                      Text(
                        "Cm",
                      )
                    ],
                  ),
                  Slider(
                    value: Height.toDouble(),
                    min: 70,
                    max: 210,
                    thumbColor: Colors.black,
                    activeColor: Colors.white,
                    onChanged: (Value) {
                      Height = Value.toInt();
                      setState(() {});
                    },
                  )
                ],
              ),
            ),
          ),
        ),
        Expanded(
          child: Container(
            child: Row(
              children: [
                Expanded(
                  child: BmiCard(
                    child: Column(
                      mainAxisAlignment: MainAxisAlignment.center,
                      children: [
                        Text("Weight", style: labelTextStyle),
                        Text(
                          "60",
                          style: numberStyle,
                        ),
                        SizedBox(height: 5),
                        Row(
                          mainAxisAlignment: MainAxisAlignment.center,
                          children: [
                            RawMaterialButton(
                              onPressed: () {},
                              elevation: 0,
                              child: Icon(Icons.add),
                              //focusColor: Colors.white,
                              shape: CircleBorder(),
                              fillColor: Color(0xff7600bc),
                              constraints: BoxConstraints.tightFor(
                                width: 56,
                                height: 56,
                              ),
                            ),
                            SizedBox(width: 5),
                            RawMaterialButton(
                                onPressed: () {},
                                elevation: 0,
                                child: Icon(Icons.remove),
                                //splashColor: Colors.white,
                                shape: CircleBorder(),
                                fillColor: Color(0xff7600bc),
                                constraints: BoxConstraints.tightFor(
                                  width: 56,
                                  height: 56,
                                )),
                          ],
                        )
                      ],
                    ),
                  ),
                ),
                Expanded(
                  child: Container(
                    child: Row(
                      children: [
                        Expanded(
                          child: BmiCard(
                            child: Column(
                              mainAxisAlignment: MainAxisAlignment.center,
                              children: [
                                Text("Age", style: labelTextStyle),
                                Text(
                                  "20",
                                  style: numberStyle,
                                ),
                                SizedBox(height: 5),
                                Row(
                                  mainAxisAlignment: MainAxisAlignment.center,
                                  children: [
                                    RawMaterialButton(
                                      onPressed: () {},
                                      elevation: 0,
                                      child: Icon(Icons.add),
                                      //focusColor: Colors.white,
                                      shape: CircleBorder(),
                                      fillColor: Color(0xff7600bc),
                                      constraints: BoxConstraints.tightFor(
                                        width: 56,
                                        height: 56,
